<h2 class="page-header">Sign up</h2>

<div class="row">
	<div class="col-lg-4 bs-example">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%=  f.label :first_name %><br />
		  <%= f.text_field  :first_name, :autofocus => true, class: "form-control" %></div>

			<div><%=  f.label :last_name %><br />
		  <%= f.text_field  :last_name, class: "form-control" %></div>

		  <div><%=  f.label :profile_name %><br />
		  <%= f.text_field  :profile_name, class: "form-control" %></div>

		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, class: "form-control" %></div>

		  <div><%= f.label :password %><br />
		  <%= f.password_field :password, class: "form-control" %></div>

		  <div><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, class: "form-control" %></div>

		  <br />
		  <div><%= f.submit "Sign up", class: "btn btn-success" %></div>
		<% end %>
	</div>
</div>

<%= render "devise/shared/links" %>
